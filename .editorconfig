# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.s?css]
indent_size = 2

[*.coffee]
indent_size = 2

# YAML
[*.yml]
indent_size = 2
